{
    "version": "2",
    "build_cookbook": {
        "name": "delivery-truck-build-cookbook",
        "path": "./delivery/build-cookbook"
    },
    "build_nodes": {
        "default": ["name:builder-*.delivery.chef.co"]
    },
    "delivery-truck": {
        "publish": {
            "chef_server": true,
            "github": "chef-cookbooks/delivery-truck"
        },
        "lint": {
          "foodcritic": {
             "ignore_rules": ["FC009"]
          }
       }
    }
    "skip_phases": [
        "security",
        "smoke",
        "quality",
        "functional",
        "publish"
    ]
}
