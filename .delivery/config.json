{
    "version": "2",
    "build_cookbook": {
        "name": "delivery-truck-build-cookbook",
        "path": ".delivery/build_cookbook"
    },
    "build_nodes": {
        "default": ["name:builder-*.delivery.chef.co"]
    },
    "delivery-truck": {
        "publish": {
            "chef_server": true,
            "github": "tylercloke/delivery-truck-test",
            "supermarket": "https://supermarket.chef.io",
            "supermarket-custom-credentials": true
        },
        "lint": {
          "foodcritic": {
             "ignore_rules": ["FC009"]
          }
       }
    },
    "skip_phases": [
        "security",
        "smoke",
        "quality",
        "functional",
        "publish"
    ]
}
